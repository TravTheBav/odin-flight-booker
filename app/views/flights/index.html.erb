<h1>Find a flight</h1>

<%= form_with url: root_path, method: 'get' do |form| %>
  <%= label_tag :departure_airport_id, 'Leaving from:' %>
  <%= select_tag :departure_airport_id, options_for_select(@airport_options) %>
  <br>

  <%= label_tag :arrival_airport_id, 'Going to:' %>
  <%= select_tag :arrival_airport_id, options_for_select(@airport_options) %>
  <br>

  <%= label_tag :total_passengers, 'How many travelers?' %>
  <%= select_tag :total_passengers, options_for_select(@passenger_options) %>
  <br>

  <%= label_tag 'flight_date[]', 'Day:' %>
  <%= select_tag 'flight_date[]', options_for_select(@flight_day_options) %>
  <br>

  <%= label_tag 'flight_date[]', 'Month:' %>
  <%= select_tag 'flight_date[]', options_for_select(@flight_month_options) %>
  <br>

  <%= label_tag 'flight_date[]', 'Year:' %>
  <%= select_tag 'flight_date[]', options_for_select(@flight_year_options) %>
  <br>

  <%= form.submit 'Find flights' %>
<% end %>

<h2>Matching flights</h2>

<%= render partial: "shared/flight_info", locals: {flights: @flights, total_passengers: @total_passengers} %>

